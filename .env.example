# .env.example — copia in .env e compila con i tuoi valori.
# Poi crea il symlink: ln -s ../../.env apps/web/.env.local

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/visiblee"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth v5
AUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth
# https://console.cloud.google.com/ → APIs & Services → Credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Anthropic
# https://console.anthropic.com
ANTHROPIC_API_KEY=""

# Brave Search API
# https://api.search.brave.com — 2.000 query/mese gratis
BRAVE_SEARCH_API_KEY=""

# Python Engine
# Shared secret tra Next.js e l'engine — cambia in produzione
ENGINE_API_KEY="changeme-in-production"
ENGINE_URL="http://localhost:8000"

# LLM model (default: claude-haiku-4-5-20251001)
CHAT_MODEL="claude-haiku-4-5-20251001"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
