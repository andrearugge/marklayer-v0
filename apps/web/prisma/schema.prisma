generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Auth enums ───────────────────────────────────────────────────────────────

enum UserRole {
  user
  admin
}

enum UserStatus {
  active
  suspended
}

// ─── Auth models ──────────────────────────────────────────────────────────────

model User {
  id            String     @id @default(uuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole   @default(user)
  status        UserStatus @default(active)
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  accounts Account[]
  sessions Session[]
  projects Project[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String
  actorId     String?  @map("actor_id")
  actorEmail  String?  @map("actor_email")
  targetId    String?  @map("target_id")
  targetEmail String?  @map("target_email")
  metadata    Json?

  createdAt DateTime @default(now()) @map("created_at")

  @@index([action])
  @@index([actorId])
  @@index([targetId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ─── Project enums ────────────────────────────────────────────────────────────

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

// ─── Content enums ────────────────────────────────────────────────────────────

enum SourcePlatform {
  WEBSITE
  SUBSTACK
  MEDIUM
  LINKEDIN
  REDDIT
  QUORA
  YOUTUBE
  TWITTER
  NEWS
  OTHER
}

enum ContentType {
  ARTICLE
  BLOG_POST
  PAGE
  SOCIAL_POST
  COMMENT
  MENTION
  VIDEO
  PODCAST
  OTHER
}

enum DiscoveryMethod {
  MANUAL
  CSV_IMPORT
  AGENT_CRAWL
  AGENT_SEARCH
}

enum ContentStatus {
  DISCOVERED
  APPROVED
  REJECTED
  ARCHIVED
}

// ─── Discovery Job enums ──────────────────────────────────────────────────────

enum DiscoveryJobType {
  CRAWL_SITE
  SEARCH_PLATFORM
  SEARCH_MENTIONS
  FULL_DISCOVERY
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

// ─── Phase 2 models ───────────────────────────────────────────────────────────

model Project {
  id          String        @id @default(uuid())
  userId      String        @map("user_id")
  name        String        @db.VarChar(255)
  description String?       @db.Text
  domain      String?       @db.VarChar(255)
  status      ProjectStatus @default(ACTIVE)
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  contentItems  ContentItem[]
  discoveryJobs DiscoveryJob[]

  @@index([userId])
  @@map("projects")
}

model ContentItem {
  id              String          @id @default(uuid())
  projectId       String          @map("project_id")
  url             String?         @db.Text
  sourcePlatform  SourcePlatform
  contentType     ContentType
  title           String          @db.VarChar(500)
  rawContent      String?         @db.Text
  excerpt         String?         @db.VarChar(1000)
  contentHash     String?         @map("content_hash") @db.VarChar(64)
  discoveryMethod DiscoveryMethod
  status          ContentStatus   @default(DISCOVERED)
  wordCount       Int?            @map("word_count")
  language        String?         @db.VarChar(10)
  publishedAt     DateTime?       @map("published_at")
  lastCrawledAt   DateTime?       @map("last_crawled_at")
  metadata        Json?           @db.JsonB
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, contentHash])
  @@index([projectId, sourcePlatform])
  @@index([projectId, status])
  @@index([projectId, contentType])
  @@map("content_items")
}

model DiscoveryJob {
  id            String           @id @default(uuid())
  projectId     String           @map("project_id")
  jobType       DiscoveryJobType
  status        JobStatus        @default(PENDING)
  config        Json?            @db.JsonB
  resultSummary Json?            @map("result_summary") @db.JsonB
  startedAt     DateTime?        @map("started_at")
  completedAt   DateTime?        @map("completed_at")
  errorMessage  String?          @map("error_message") @db.Text
  createdAt     DateTime         @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, status])
  @@map("discovery_jobs")
}
