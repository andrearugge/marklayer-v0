generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Auth enums ───────────────────────────────────────────────────────────────

enum UserRole {
  user
  admin
}

enum UserStatus {
  active
  suspended
}

// ─── Auth models ──────────────────────────────────────────────────────────────

model User {
  id            String     @id @default(uuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole   @default(user)
  status        UserStatus @default(active)
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  accounts Account[]
  sessions Session[]
  projects Project[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String
  actorId     String?  @map("actor_id")
  actorEmail  String?  @map("actor_email")
  targetId    String?  @map("target_id")
  targetEmail String?  @map("target_email")
  metadata    Json?

  createdAt DateTime @default(now()) @map("created_at")

  @@index([action])
  @@index([actorId])
  @@index([targetId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ─── Project enums ────────────────────────────────────────────────────────────

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

// ─── Content enums ────────────────────────────────────────────────────────────

enum SourcePlatform {
  WEBSITE
  SUBSTACK
  MEDIUM
  LINKEDIN
  REDDIT
  QUORA
  YOUTUBE
  TWITTER
  NEWS
  OTHER
}

enum ContentType {
  ARTICLE
  BLOG_POST
  PAGE
  SOCIAL_POST
  COMMENT
  MENTION
  VIDEO
  PODCAST
  OTHER
}

enum DiscoveryMethod {
  MANUAL
  CSV_IMPORT
  AGENT_CRAWL
  AGENT_SEARCH
}

enum ContentStatus {
  DISCOVERED
  APPROVED
  REJECTED
  ARCHIVED
}

// ─── Discovery Job enums ──────────────────────────────────────────────────────

enum DiscoveryJobType {
  CRAWL_SITE
  SEARCH_PLATFORM
  SEARCH_MENTIONS
  FULL_DISCOVERY
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

// ─── Knowledge Graph enums ────────────────────────────────────────────────────

enum EntityType {
  BRAND
  PERSON
  ORGANIZATION
  TOPIC
  PRODUCT
  LOCATION
  CONCEPT
  OTHER
}

enum AnalysisJobType {
  FULL_ANALYSIS
  EXTRACT_ENTITIES
  GENERATE_EMBEDDINGS
  CLUSTER_TOPICS
  COMPUTE_SCORE
  GENERATE_CONTENT_SUGGESTIONS
  GENERATE_BRIEFS
}

enum BriefStatus {
  PENDING
  ACCEPTED
  REJECTED
  DONE
}

// ─── Phase 2 models ───────────────────────────────────────────────────────────

model Project {
  id          String        @id @default(uuid())
  userId      String        @map("user_id")
  name        String        @db.VarChar(255)
  description String?       @db.Text
  domain      String?       @db.VarChar(255)
  status      ProjectStatus @default(ACTIVE)
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  contentItems       ContentItem[]
  discoveryJobs      DiscoveryJob[]
  entities           Entity[]
  score              ProjectScore?
  analysisJobs       AnalysisJob[]
  contentSuggestions ContentSuggestion[]
  contentBriefs      ContentBrief[]

  @@index([userId])
  @@map("projects")
}

model ContentItem {
  id              String          @id @default(uuid())
  projectId       String          @map("project_id")
  url             String?         @db.Text
  sourcePlatform  SourcePlatform
  contentType     ContentType
  title           String          @db.VarChar(500)
  rawContent      String?         @db.Text
  excerpt         String?         @db.VarChar(1000)
  contentHash     String?         @map("content_hash") @db.VarChar(64)
  discoveryMethod DiscoveryMethod
  status          ContentStatus   @default(DISCOVERED)
  wordCount       Int?            @map("word_count")
  language        String?         @db.VarChar(10)
  publishedAt     DateTime?       @map("published_at")
  lastCrawledAt   DateTime?       @map("last_crawled_at")
  fetchError      String?         @map("fetch_error") @db.Text
  metadata        Json?           @db.JsonB
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  embedding       Unsupported("vector(384)")?
  project         Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  contentEntities ContentEntity[]
  suggestion      ContentSuggestion?

  @@unique([projectId, contentHash])
  @@index([projectId])
  @@index([projectId, sourcePlatform])
  @@index([projectId, status])
  @@index([projectId, contentType])
  @@map("content_items")
}

model DiscoveryJob {
  id            String           @id @default(uuid())
  projectId     String           @map("project_id")
  jobType       DiscoveryJobType
  status        JobStatus        @default(PENDING)
  config        Json?            @db.JsonB
  resultSummary Json?            @map("result_summary") @db.JsonB
  startedAt     DateTime?        @map("started_at")
  completedAt   DateTime?        @map("completed_at")
  errorMessage  String?          @map("error_message") @db.Text
  createdAt     DateTime         @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, status])
  @@map("discovery_jobs")
}

// ─── Phase 3 models ───────────────────────────────────────────────────────────

model Entity {
  id              String     @id @default(uuid())
  projectId       String     @map("project_id")
  type            EntityType
  label           String     @db.VarChar(255)
  normalizedLabel String     @map("normalized_label") @db.VarChar(255)
  frequency       Int        @default(1)
  metadata        Json?      @db.JsonB
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")

  project         Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  contentEntities ContentEntity[]
  sourceRelations EntityRelation[] @relation("SourceEntity")
  targetRelations EntityRelation[] @relation("TargetEntity")

  @@unique([projectId, normalizedLabel, type])
  @@index([projectId, type])
  @@map("entities")
}

model ContentEntity {
  contentId String  @map("content_id")
  entityId  String  @map("entity_id")
  salience  Float   @default(0.5)
  context   String? @db.Text

  content ContentItem @relation(fields: [contentId], references: [id], onDelete: Cascade)
  entity  Entity      @relation(fields: [entityId], references: [id], onDelete: Cascade)

  @@id([contentId, entityId])
  @@map("content_entities")
}

model EntityRelation {
  id           String   @id @default(uuid())
  projectId    String   @map("project_id")
  sourceId     String   @map("source_id")
  targetId     String   @map("target_id")
  relationType String   @map("relation_type") @db.VarChar(100)
  weight       Float    @default(1.0)
  createdAt    DateTime @default(now()) @map("created_at")

  source Entity @relation("SourceEntity", fields: [sourceId], references: [id], onDelete: Cascade)
  target Entity @relation("TargetEntity", fields: [targetId], references: [id], onDelete: Cascade)

  @@unique([sourceId, targetId, relationType])
  @@index([projectId])
  @@map("entity_relations")
}

model ProjectScore {
  id           String   @id @default(uuid())
  projectId    String   @unique @map("project_id")
  overallScore Float    @map("overall_score")
  dimensions   Json     @db.JsonB
  suggestions  Json?    @db.JsonB
  contentCount Int      @map("content_count")
  isStale      Boolean  @default(false) @map("is_stale")
  computedAt   DateTime @map("computed_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_scores")
}

model AnalysisJob {
  id            String          @id @default(uuid())
  projectId     String          @map("project_id")
  jobType       AnalysisJobType
  status        JobStatus       @default(PENDING)
  resultSummary Json?           @map("result_summary") @db.JsonB
  startedAt     DateTime?       @map("started_at")
  completedAt   DateTime?       @map("completed_at")
  errorMessage  String?         @map("error_message") @db.Text
  createdAt     DateTime        @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, status])
  @@map("analysis_jobs")
}

// ─── Phase 5 models ───────────────────────────────────────────────────────────

model ContentSuggestion {
  id          String   @id @default(uuid())
  contentId   String   @unique @map("content_id")
  projectId   String   @map("project_id")
  suggestions Json     @db.JsonB
  generatedAt DateTime @map("generated_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  content ContentItem @relation(fields: [contentId], references: [id], onDelete: Cascade)
  project Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("content_suggestions")
}

model ContentBrief {
  id              String         @id @default(uuid())
  projectId       String         @map("project_id")
  title           String         @db.VarChar(500)
  platform        SourcePlatform
  gapType         String         @map("gap_type") @db.VarChar(100)
  gapLabel        String         @map("gap_label") @db.VarChar(255)
  keyPoints       Json           @map("key_points") @db.JsonB
  entities        Json           @db.JsonB
  targetWordCount Int?           @map("target_word_count")
  notes           String?        @db.Text
  status          BriefStatus    @default(PENDING)
  generatedAt     DateTime       @map("generated_at")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, gapType, gapLabel])
  @@index([projectId, status])
  @@map("content_briefs")
}
